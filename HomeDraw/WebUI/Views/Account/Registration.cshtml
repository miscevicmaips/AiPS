@model WebUI.Models.RegistrationViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/login-page.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width" />
    <title>Home Draw - Registration</title>
</head>
<body>


    <div class="position-absolute" style="top:15px; left:30px;">
        @using (Html.BeginForm("LogIn", "Account"))
        {
            <button id="goBackButton" class="btn btn-dark" type="submit"><i class="fas fa-arrow-left"></i></button>
        }
    </div>

    <div class="container-fluid h-100 p-0 m-0">
        <div class="row  h-100 p-0 m-0 align-items-center justify-content-center">
            <div id="registrationMenu" class="col-md-6 pt-2 pb-3 pr-5 pl-5  m-0 justify-content-center text-center" style="border-radius:5px;">
                <h4 class="text-white"> Register to Home Draw</h4>
                @Html.ValidationSummary(false, "", new { @class = "validationSummary" })

                @using (Html.BeginForm("RegisterAsync", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @id = "loginForm" }))
                {
                    <div id="username" class="mt-1 text-left">
                        <label class="text-white">Username</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Username", @id = "usernameInput" })
                    </div>
                    <div id="password" class="mt-1 text-left">
                        <label class="text-white">Password</label>
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @id = "passwordInput", @type = "password" })
                    </div>

                    <div id="firstName" class="mt-1 text-left">
                        <label class="text-white">First Name</label>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name", @id = "firstNameInput" })
                    </div>

                    <div id="lastName" class="mt-1 text-left">
                        <label class="text-white">Last Name</label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name", @id = "lastNameInput" })
                    </div>

                    <div id="emailAddress" class="mt-1 text-left">
                        <label class="text-white">Email Address</label>
                        @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @placeholder = "Email Addres", @id = "emailAddressInput" })
                    </div>

                    <div id="buttonSubmit" class="mt-3 text-left">
                        <button id="register" class="btn btn-dark btn-block" type="submit">Register</button>
                    </div>
                }

            </div>
        </div>
    </div>
</body>

</html>
